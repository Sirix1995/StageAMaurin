<?xml version = "1.0" encoding="UTF-8"?> 
<plugin 
	id="de.grogra.nurbseditor" 
	version="1.0" 
	xmlns="http://grogra.de/registry">

	<library file="gluegen-rt.jar" prefixes="{com.sun.gluegen.runtime}"/>
  	<library file="jogl.jar" prefixes="{com.sun.opengl,javax.media}"/>
	
	<library file="NURBSEditor.jar" prefixes="{de.grogra.nurbseditor, de.grogra.nurbseditor2d, de.grogra.nurbseditor3d}"/>

	<import plugin="de.grogra.pf"/> 
	<import plugin="de.grogra.pf.ui.swing"/>
	<import plugin="de.grogra.imp3d"/>	
	<import plugin="de.grogra.math"/>
	<import plugin="de.grogra.xl.compiler"/>
	<import plugin="de.grogra.rgg"/>

	<registry> 
	
	<ref name="ui"> 
		<ref name="panels"> 
			<directory name = "NURBSEditor">
			
			<panel name="2D"> 
				<exists name=".available" ref="/project"/> 
				
				<object expr="de.grogra.nurbseditor.NURBSEditor.createCurve2DPanel"> 
					<var name="context"/> 
					<vars/> 
				</object> 
			</panel> 
			<panel name = "3D">
				<exists name=".available" ref="/project"/>
				<object expr="de.grogra.nurbseditor.NURBSEditor.createCurve3DPanel">
					<var name="context"/>
					<vars/>
				</object>
			</panel>
			</directory>
		</ref> 	
	</ref>
	</registry> 
</plugin>
